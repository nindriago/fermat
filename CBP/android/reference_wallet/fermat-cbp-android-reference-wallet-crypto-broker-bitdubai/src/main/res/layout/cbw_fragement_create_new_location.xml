<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/cbw_country_spinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:drawSelectorOnTop="true"
                android:backgroundTint="@color/black"
                tools:listitem="@layout/cbw_spinner_item"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatEditText
                android:id="@+id/cbw_city_edit_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="@string/cbw_city"
                android:textColor="@color/black"
                android:textColorHint="#AAA"
                android:textSize="16sp"
                android:backgroundTint="@color/black"
                app:typeface="ROBOTO_REGULAR"
                tools:text="Maracaibo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatEditText
                android:id="@+id/cbw_state_edit_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:hint="@string/cbw_state_province"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:textColorHint="#AAA"
                android:textSize="16sp"
                app:typeface="ROBOTO_REGULAR"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatEditText
                android:id="@+id/cbw_zip_code_edit_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="@string/cbw_zip_postal_code"
                android:textColor="@color/black"
                android:textColorHint="#AAA"
                android:textSize="16sp"
                android:backgroundTint="@color/black"
                app:typeface="ROBOTO_REGULAR"/>
        </LinearLayout>

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatEditText
            android:id="@+id/cbw_address_line_1_edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:hint="@string/cbw_address_line_1"
            android:textColor="@color/black"
            android:textColorHint="#AAA"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            app:typeface="ROBOTO_REGULAR"/>

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatEditText
            android:id="@+id/cbw_address_line_2_edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/cbw_address_line_2"
            android:textColor="@color/black"
            android:textColorHint="#AAA"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            app:typeface="ROBOTO_REGULAR"/>
    </LinearLayout>

    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatButton
        android:id="@+id/cbw_create_new_location_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#42ba70"
        android:text="@string/cbw_create"
        android:textAllCaps="true"
        android:textColor="@color/white"/>
</LinearLayout>