<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCCCCC"

    android:layout_marginBottom="0dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/ccw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="#085394"
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="Location"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Wallet Cash USD"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@+id/ccw_close_img_button"
            android:layout_alignParentStart="true"
            android:textSize="14dp"
            android:id="@+id/ccw_sub_title"
            android:textColor="#323030"
            android:layout_toStartOf="@+id/ccw_close_img_button"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <ImageView
            android:id="@+id/ccw_close_img_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ccw_action_content_clear"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView4"
            android:background="#CCCCCC"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignStart="@+id/ccw_sub_title" />

    </RelativeLayout>

</android.support.v7.widget.CardView>