<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_other_profile"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_circular_other_profile"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_user_avatar"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/btn_conect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_blue"
                android:drawableLeft="@drawable/ic_profile_connect"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_profile_connect"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="Connect"
                android:textColor="#ffffff"
                android:visibility="visible"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_connection_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_grey"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="Connected"
                android:textColor="#ffffff"
                android:visibility="gone"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/btn_connection_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_blue"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="Cancel Request"
                android:textColor="#ffffff"
                android:visibility="gone"
                tools:ignore="HardcodedText" />


            <Button
                android:id="@+id/btn_disconect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_white"
                android:drawableLeft="@drawable/ic_profile_disconnect"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_profile_disconnect"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="Disconnect"
                android:textColor="#0072bc"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_connection_request_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_grey"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="Request Sent"
                android:textColor="#ffffff"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_connection_request_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_grey"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="Connection Canceled"
                android:textColor="#ffffff"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Name"
                android:textColor="#0072bc"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Janeth Williams"
                android:textColor="#292929"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#b5b5b7" />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Extended Key"
                android:textColor="#0072bc"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/userExtendedKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="extended key"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="#292929"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#b5b5b7" />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/dap_other_profile_last_connection_date"
                android:textColor="#0072bc"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/issuerLastConnectionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Last Connection Date"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="#292929"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#b5b5b7" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>