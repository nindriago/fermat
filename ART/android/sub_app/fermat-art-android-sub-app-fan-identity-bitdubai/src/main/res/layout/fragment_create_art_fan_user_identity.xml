<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/afi_my_identity">


    <RelativeLayout
        android:id="@+id/afi_user_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/afi_circular_other_profile"
        android:gravity="center">

        <ImageView
            android:id="@+id/afi_fan_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/afi_user_image"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/afi_linearLayout"
        android:layout_above="@+id/afi_create_art_fan_identity"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@android:color/transparent">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/afi_alias_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:text="Alias"
                android:textColor="#919090"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/afi_alias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/afi_alias_label"
                android:layout_marginTop="4dp"
                android:hint="Username"
                android:lines="1"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="0.29">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/afi_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:text="Status"
                android:textColor="#919090"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />


            <EditText
                android:id="@+id/afi_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your access password here"
                android:lines="1"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp"
                tools:ignore="HardcodedText"
                android:layout_below="@+id/afi_status_label"
                android:layout_alignParentStart="true"
                android:inputType="textPassword" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="349dp"
            android:layout_height="104dp"
            android:layout_gravity="center_horizontal">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/afi_external_platform_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="External Platform"
                android:textColor="#000000"
                tools:ignore="HardcodedText" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/afi_external_platform"
                android:spinnerMode="dropdown"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"/>
            <!--android:entries="@array/externalPlatforms"/>-->

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/create_tokenly_fan_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="#0072bc"
        android:text="@string/create"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>