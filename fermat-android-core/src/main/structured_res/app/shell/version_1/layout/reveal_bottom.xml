<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reveal"
        android:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">

            <LinearLayout
                android:id="@+id/reveal_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >


                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:typeface="CAVIAR_DREAMS"
                    android:background="@drawable/settings_name"
                    android:paddingLeft="12dp"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/splitter_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontal_container"
                    android:visibility="gone">



                </RelativeLayout>



                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="#DAFFFFFF">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/ic_drawable_p2p_network"
                            android:id="@+id/btn_fermat_network"/>
                        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="11.5sp"
                            android:layout_marginTop="2dp"
                            android:text="Fermat Network"
                            android:textColor="#404041"/>

                        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:text="1 Node"
                            android:textStyle="bold"
                            android:textColor="#00B398"/>

                    </LinearLayout>
                    <!-- Other 2 icons here-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/ic_drawable_btc_network" />
                        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textSize="11.5sp"
                            android:text="Bitcoin Network"
                            android:textColor="#404041"/>
                        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:text="RegTest"
                            android:textStyle="bold"
                            android:textColor="#00B398"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/ic_drawable_private_network" />
                        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="11.5sp"
                            android:gravity="center"
                            android:text="Private Network"
                            android:textColor="#404041"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/btn_fermat_apps_status"
                            tools:src="@drawable/addon"
                            android:paddingTop="20dp"/>
                        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="11.5sp"
                            android:layout_marginTop="2dp"
                            android:text="App Filter"
                            android:textColor="#404041"/>

                        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_marginTop="2dp"
                            android:text="Develop"
                            android:textStyle="bold"
                            android:textColor="#00B398"/>

                    </LinearLayout>


                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DAFFFFFF"
                    android:paddingBottom="12dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#666666"
                        android:layout_gravity="center_vertical"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_settings_bottom_menu"
                        android:background="@drawable/background_circle"
                        android:src="@drawable/settings_icon_dialog"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>

                </FrameLayout>



            </LinearLayout>



        </RelativeLayout>
    </io.codetail.widget.RevealFrameLayout>

</LinearLayout>