<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:dividerHorizontal"
    android:showDividers="middle">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/round_corner_line_dialog"
            android:layout_marginBottom="12dp"
            android:id="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add broadcast list recipients"
            android:id="@+id/textView"
            android:textColor="#808080"
            android:singleLine="false"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="#000"
            android:id="@+id/editTextContacts"
            android:hint="Type contact name"
            android:textColorHint="#808080"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Broadcast Scheduled"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:textColor="#6d6d6d"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fecha"
            android:textColor="#000"
            android:layout_above="@+id/editTextContacts"
            android:layout_alignStart="@+id/view"
            android:layout_marginBottom="50dp"
            android:layout_alignEnd="@+id/editTextContacts" />

        <Spinner
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hora"
            android:layout_toEndOf="@+id/editTextContacts"
            android:layout_alignBottom="@+id/fecha"
            android:layout_alignTop="@+id/fecha" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DAY PROGRAMMING"
            android:id="@+id/textView4"
            android:layout_above="@+id/fecha"
            android:layout_alignStart="@+id/fecha" />
        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:id="@+id/textView5"
            android:textColor="@color/gray_1"
            android:layout_below="@+id/radioButton"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Type broadcast name"
            android:ems="10"
            android:textColor="#000"
            android:id="@+id/editTextNameBroadcast"
            android:textColorHint="#808080"
            android:layout_above="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignEnd="@+id/view" />

    </RelativeLayout>
</LinearLayout>